<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.audiooffsetmanager" version="1.0.0" name="Audio Offset Manager" provider-name="matthane">
    <requires>
        <import addon="xbmc.python" version="3.0.1"/>
    </requires>
    <extension point="xbmc.service" library="default.py" />
    <extension point="xbmc.addon.metadata">
        <source>https://github.com/matthane/script.audiooffsetmanager</source>
        <news>v1.0.0 (2024-16-10)
        - Initial launch
        </news>
        <summary lang="en_GB">Dynamically manages audio offset based on video and audio stream format</summary>
        <description lang="en_GB">This service add-on dynamically adjusts the audio offset to user configured values based on the currently playing video and audio stream format, along with other helpful features</description>
        <platform>all</platform>
        <language>en</language>
        <license>GPL-3.0-or-later</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot-1.jpg</screenshot>
            <screenshot>resources/screenshot-2.jpg</screenshot>
            <screenshot>resources/screenshot-3.jpg</screenshot>
        </assets>
    </extension>
</addon>
